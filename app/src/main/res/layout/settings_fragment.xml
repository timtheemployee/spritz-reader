<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="@dimen/spacing_32"
	android:paddingTop="@dimen/spacing_32"
	android:paddingEnd="@dimen/spacing_32"
	app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

	<com.wxxtfxrmx.spritzreader.views.progress.LabeledSeekBar
		android:id="@+id/wordsInMinuteSeekbar"
		android:layout_width="@dimen/match_constraint"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/speedTextInfo"
		android:layout_width="@dimen/match_constraint"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/spacing_32"
		android:paddingBottom="@dimen/spacing_32"
		android:text="@string/middle_speed_text_info"
		android:textColor="@color/colorBlack"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/wordsInMinuteSeekbar" />
</androidx.constraintlayout.widget.ConstraintLayout>